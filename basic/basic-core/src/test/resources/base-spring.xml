<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:basic-core="http://com.howbuy.cc.basic/schema/basic-core"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:basic-cache="http://com.howbuy.cc.basic/schema/basic-cache"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd       http://com.howbuy.cc.basic/schema/basic-core http://com.howbuy.cc.basic/schema/basic-core.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://com.howbuy.cc.basic/schema/basic-cache http://com.howbuy.cc.basic/schema/basic-cache.xsd">


    <context:component-scan base-package="com.howbuy.cc.basic"/>
    <basic-core:core-driven>
        <basic-core:dubboLog
                accessLog="log/access.log"
                requestLog="log/request.log"
                 />
        <basic-core:failover failOverLog="log/failover.log"/>
    </basic-core:core-driven>

    <basic-cache:cache-driven>
        <basic-cache:ehcache/>
    </basic-cache:cache-driven>



</beans>