<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


    <bean class="com.howbuy.tp.common.redis.core.JedisSentinelShardedConfig" init-method="init">
        <property name="sentinels" value="${redis.sentinel.path}"></property>
        <property name="masters" value="${redis.sentinel.serverName}"></property>
        <property name="maxIdle" value="10"></property>
        <property name="maxTotal" value="100"></property>
        <property name="minIdle" value="5"></property>
        <property name="keyLimit" value="128"></property>
        <property name="valueLimit" value="1048576"></property>
        <property name="dbNum" value="1"></property>
    </bean>

</beans>